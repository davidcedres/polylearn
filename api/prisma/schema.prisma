generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @unique
  signature String

  submits Submit[]
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String

  questions Question[]
  status    Status
}

enum Status {
  DRAFT
  LIVE
}

model Question {
  id   Int    @id @default(autoincrement())
  text String

  skill   Skill @relation(fields: [skillId], references: [id])
  skillId Int

  answers Answer[]
}

model Answer {
  id   Int    @id @default(autoincrement())
  text String

  question   Question @relation(fields: [questionId], references: [id])
  questionId Int

  submits Submit[]
}

model Submit {
  userId String
  User   User   @relation(fields: [userId], references: [id])

  answerId Int
  answer   Answer @relation(fields: [answerId], references: [id])

  @@id([userId, answerId])
}
